#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  source "$shome/script/profile"

  pkg ensure misc/rlwrap

  case "$(uname -s)" in
    Linux)
      sudo update
      sudo aptitude -y install openjdk-7-jdk
      ;;
  esac

  "$shome/bin/lein" >/dev/null || true
}

bootstrap
